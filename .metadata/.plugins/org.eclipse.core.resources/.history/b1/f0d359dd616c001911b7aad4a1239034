package cursojava.exercicios.lista2;

import java.util.Scanner;

public class Exercicio11 {

	public static void main(String[] args) {

		Scanner scan = new Scanner(System.in);
		
		System.out.println("Digite seu salario");
		
		double salarioAntigo = scan.nextDouble();
		double salarioNovo;
		
		if(salarioAntigo < 280)
			printf("Salario antigo: %.2f\nPorcentual: 20%\nValor do aumento: %.2f\nNovo Salario: %.2f", salarioAntigo, (salarioAntigo + (salarioAntigo * 0.2)) - salarioAntigo, salarioAntigo + (salarioAntigo * 0.2));
		scan.close();
	}

}
