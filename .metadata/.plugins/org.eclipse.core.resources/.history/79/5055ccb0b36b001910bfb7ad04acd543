package cursojava.exercicios.lista1;

import java.util.Scanner;

public class Exercicio14 {

	public static void main(String[] args) {
		
		Scanner scan = new Scanner(System.in);
		
		System.out.println("Informe o tamanho do arquivo (em MB)");
		int tamanho = scan.nextInt();
		System.out.println("Informe a velocidade da internet (em Mbps)");
		int velocidade = scan.nextInt();
		
		double tempoSegundos = tamanho/velocidade;
		double tempoMinutos = tempoSegundos/60;
		
		System.out.printf("O arquivo demorara aproximadamente %.2f", tempoMinutos);
		
		scan.close();

	}

}
