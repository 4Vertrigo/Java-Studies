package cursojava.exercicios.lista1;

import java.util.Scanner;

public class Exercicio14 {

	public static void main(String[] args) {
		
		Scanner scan = new Scanner(System.in);
		
		System.out.println("Informe o tamanho do arquivo (em MB)");
		double tamanho = scan.nextInt();
		System.out.println("Informe a velocidade da internet (em Mbps)");
		double velocidade = scan.nextInt();
		
		double tempo = tamanho/velocidade;
		
		System.out.printf("O arquivo demorara aproximadamente %.2f", tempo/60);
		
		scan.close();
	}

}
